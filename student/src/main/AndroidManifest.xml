<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android" package="com.example.student">

    <application
        android:name=".StudentApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".pages.home.HomeActivity"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".pages.homework.HomeworkListActivity"
            android:screenOrientation="landscape"/>
        <activity android:name=".pages.homework.HomeworkActivity"
            android:screenOrientation="landscape"/>
        <activity android:name=".pages.note.NoteActivity"
            android:screenOrientation="landscape"/>
        <activity android:name=".pages.answer.AnswerActivity"
            android:screenOrientation="landscape"/>
        <activity android:name=".pages.calendar.CalendarActivity"
            android:screenOrientation="landscape"/>
        <activity android:name=".pages.calendar.CalendarDialogActivity"
            android:theme="@style/DialogActivity"
            android:screenOrientation="landscape"/>
        <activity android:name=".pages.resource.ResourceListActivity"
            android:screenOrientation="landscape"/>
        <activity android:name=".pages.note.EditNoteActivity"
            android:screenOrientation="landscape"/>
        <activity android:name=".pages.wrongtopic.WrongTopicActivity"
            android:screenOrientation="landscape"/>
        <activity android:name=".pages.wrongtopic.EditWrongTopicActivity"
            android:screenOrientation="landscape"/>
    </application>

</manifest>