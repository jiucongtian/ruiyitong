<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:ignore="MissingPrefix">

    <LinearLayout
        android:id="@+id/header_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/tb_header"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_alignParentTop="true"
            android:background="@color/white"
            app:title="我的云笔记"
            app:titleTextAppearance="@style/txt_24_dark" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/font_gray_2" />
    </LinearLayout>

    <LinearLayout
        android:layout_below="@id/header_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="88dp">
            <LinearLayout
                android:layout_centerVertical="true"
                android:layout_marginLeft="36dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_gravity="center_vertical"
                        style="@style/txt_24_dark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="大屏幕截图"/>
                    <TextView
                        android:layout_marginLeft="20dp"
                        android:layout_gravity="center_vertical"
                        style="@style/txt_18_dark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2017-12-29 14:37:14加入试题本"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:background="@color/homework_history"
                        style="@style/txt_14_white"
                        android:gravity="center"
                        android:layout_width="56dp"
                        android:layout_height="24dp"
                        android:text="语文"/>
                    <TextView
                        android:layout_marginLeft="4dp"
                        android:background="@color/homework_history"
                        style="@style/txt_14_white"
                        android:gravity="center"
                        android:layout_width="56dp"
                        android:layout_height="24dp"
                        android:text="语文"/>
                    <TextView
                        android:layout_marginLeft="4dp"
                        android:background="@color/homework_history"
                        style="@style/txt_14_white"
                        android:gravity="center"
                        android:layout_width="56dp"
                        android:layout_height="24dp"
                        android:text="语文"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_marginRight="36dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@color/red"/>
                    <TextView
                        android:layout_gravity="center_horizontal"
                        style="@style/txt_14_dark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="随手记"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginLeft="40dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@color/red"/>
                    <TextView
                        android:layout_gravity="center_horizontal"
                        style="@style/txt_14_dark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="已掌握"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginLeft="40dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@color/red"/>
                    <TextView
                        android:layout_gravity="center_horizontal"
                        style="@style/txt_14_dark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="删除"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginLeft="40dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@color/red"/>
                    <TextView
                        android:layout_gravity="center_horizontal"
                        style="@style/txt_14_dark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="编辑"/>
                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>

        <FrameLayout
            android:background="@color/color_efefef"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:src="@color/answer_true"
                android:layout_gravity="center_horizontal"
                android:layout_width="784dp"
                android:layout_height="588dp" />

        </FrameLayout>

    </LinearLayout>


</RelativeLayout>




