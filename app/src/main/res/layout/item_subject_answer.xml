<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_container"
    android:layout_width="320dp"
    android:layout_height="240dp"
    android:layout_marginBottom="0dp"
    android:background="@mipmap/shadow4px">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@color/light_blue_deep"/>
    <FrameLayout
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@color/light_blue_4">
        <TextView
            style="@style/txt_20_dark"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="01"/>
    </FrameLayout>

    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:background="@color/white_translucence_90"
        android:layout_width="match_parent"
        android:layout_height="42dp">

        <LinearLayout
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                style="@style/txt_14_dark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="学生01"/>
            <TextView
                style="@style/txt_12_dark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="时间00:00:30"/>
        </LinearLayout>

        <LinearLayout
            android:layout_alignParentRight="true"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="24dp"
                android:layout_marginTop="5dp"
                >
                <ImageView
                    android:layout_gravity="center_horizontal"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    app:ico_color="@color/font_dark"
                    app:ico_icon="fon_833"/>
                <TextView
                    style="@style/txt_12_dark"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="投屏"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="24dp"
                android:layout_marginTop="5dp">
                <ImageView
                    android:layout_gravity="center_horizontal"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    app:ico_color="@color/font_dark"
                    app:ico_icon="fon_847"/>
                <TextView
                    style="@style/txt_12_dark"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="发还"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="24dp"
                android:layout_marginTop="5dp">
                <ImageView
                    android:layout_gravity="center_horizontal"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    app:ico_color="@color/font_dark"
                    app:ico_icon="fon_846"/>
                <TextView
                    style="@style/txt_12_dark"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="点赞"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp">
                <ImageView
                    android:layout_gravity="center_horizontal"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    app:ico_color="@color/font_dark"
                    app:ico_icon="fon_82d"/>
                <TextView
                    style="@style/txt_12_dark"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="收藏"/>
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>




</RelativeLayout>