<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/left_drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingPrefix">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_213636">

        <com.example.howard.ruiyipai.view.NoScrollViewPager
            android:id="@+id/vp_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="36dp"
            android:layout_marginRight="36dp">
        </com.example.howard.ruiyipai.view.NoScrollViewPager>

        <!--<android.support.v4.view.ViewPager-->
            <!--android:id="@+id/vp_main"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent"-->
            <!--android:layout_marginLeft="36dp"-->
            <!--android:layout_marginRight="36dp">-->
        <!--</android.support.v4.view.ViewPager>-->

        <FrameLayout
            android:id="@+id/fl_select_file"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:background="@color/font_gray"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true">
            <ImageView
                android:layout_width="23dp"
                android:layout_height="46dp"
                android:background="@mipmap/half_circle"/>
            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="18dp"
                android:layout_height="18dp"
                tools:src="@color/black"
                app:ico_color="@color/white"
                app:ico_icon="fon_81b"/>
        </FrameLayout>


        <android.support.v7.widget.Toolbar
            android:id="@+id/tb_header"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:background="@color/black_translucence"
            android:layout_alignParentTop="true">


            <RelativeLayout
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_lesson_time"
                    style="@style/txt_24_white"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="00:21:35"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_toLeftOf="@id/tv_lesson_time"
                    android:layout_marginRight="15dp">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        tools:src="@color/black"
                        app:ico_color="@color/white"
                        app:ico_icon="fon_817"/>
                    <TextView
                        style="@style/txt_12_white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="8dp"

                        android:text="@string/mute"/>
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@id/tv_lesson_time">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        tools:src="@color/black"
                        app:ico_color="@color/white"
                        app:ico_icon="fon_81e"/>
                    <TextView
                        style="@style/txt_12_white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="8dp"
                        android:text="@string/tag"/>

                </LinearLayout>



                <android.support.design.widget.TabLayout
                    android:layout_centerVertical="true"
                    android:id="@+id/tl_switch_work_area"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    app:tabIndicatorColor="@color/light_blue_deep"/>

            </RelativeLayout>



        </android.support.v7.widget.Toolbar>

        <!-- 工具条 -->
        <RelativeLayout
            android:id="@+id/rl_lesson_tools_container"
            android:layout_width="match_parent"
            android:layout_height="106dp"
            android:background="@mipmap/lesson_func_bg"
            android:layout_alignParentBottom="true">

            <ImageView
                android:id="@+id/iv_full_screen"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="36dp"
                android:layout_marginBottom="33dp"
                app:ico_color="@color/font_white"
                app:ico_icon="fon_823"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rlv_tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="82dp"
                android:layout_marginRight="46dp"
                tools:background="@color/black">

            </android.support.v7.widget.RecyclerView>

            <ImageView
                android:id="@+id/iv_unfold"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"


                android:layout_marginRight="10dp"
                android:paddingLeft="23dp"
                android:paddingRight="23dp"
                app:ico_color="@color/font_white"
                app:ico_icon="fon_819" />

        </RelativeLayout>

        <!-- 缩略图 -->
        <RelativeLayout
            android:id="@+id/rl_lesson_thumbnail_container"
            android:layout_above="@id/rl_lesson_tools_container"
            android:layout_marginBottom="-20dp"
            android:layout_width="match_parent"
            android:layout_height="128dp"
            android:background="@color/black_translucence_20">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_lesson_thumbnail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp">

            </android.support.v7.widget.RecyclerView>

        </RelativeLayout>


        <ImageView
            android:id="@+id/iv_show_all_tools"
            android:visibility="gone"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="24dp"
            android:layout_marginBottom="21dp"
            android:background="@drawable/shape"
            android:padding="12dp"
            app:ico_color="@color/white"
            app:ico_icon="fon_824"/>

    </RelativeLayout>


    <!-- 左侧侧滑 -->

    <RelativeLayout
        android:layout_width="320dp"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_gravity="left">
    <!--<RelativeLayout-->
        <!--android:layout_width="320dp"-->
        <!--android:layout_height="match_parent"-->
        <!--android:background="@color/black">-->

        <RelativeLayout
            android:id="@+id/rl_footer"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true">

            <LinearLayout
                android:orientation="vertical"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_gravity="center_horizontal"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    app:ico_color="@color/icon_blue_sky"
                    app:ico_icon="fon_813"/>
                <TextView
                    style="@style/txt_12_gray"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/camera"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_gravity="center_horizontal"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    app:ico_color="@color/icon_blue_sky"
                    app:ico_icon="fon_822"/>
                <TextView
                    style="@style/txt_12_gray"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/add_resource"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_gravity="center_horizontal"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    app:ico_color="@color/icon_blue_sky"
                    app:ico_icon="fon_821"/>
                <TextView
                    style="@style/txt_12_gray"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/blackboard"/>
            </LinearLayout>

        </RelativeLayout>


        <LinearLayout
            android:id="@+id/ll_splite_page"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/rl_footer"
            android:layout_alignParentTop="true"
            android:background="@color/icon_blue_sky">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="66dp">
                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="24dp"
                    app:ico_color="@color/white"
                    app:ico_icon="fon_825"/>
                <TextView
                    style="@style/txt_16_white"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="切换分屏模式"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="34dp">
                <TextView
                    android:id="@+id/tv_splide_list"
                    style="@style/txt_16_black_tab"
                    android:background="@color/color_bdfbfa"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="分屏列表"/>
                <TextView
                    android:id="@+id/tv_resource_list"
                    style="@style/txt_16_white_tab"
                    android:background="@color/light_blue_deep"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="资源列表"/>
            </LinearLayout>

            <FrameLayout
                android:id="@+id/fl_splide_mode_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white">

            </FrameLayout>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_lesson_page"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/rl_footer"
            android:layout_alignParentTop="true">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/light_blue_deep">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/txt_24_white"
                        android:text="今天 第一节"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/txt_18_white"
                        android:layout_marginTop="8dp"
                        android:text="高一年级1班 备课内容"/>
                </LinearLayout>
            </RelativeLayout>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_left_lessons"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </android.support.v7.widget.RecyclerView>
        </LinearLayout>

    </RelativeLayout>

</android.support.v4.widget.DrawerLayout>


