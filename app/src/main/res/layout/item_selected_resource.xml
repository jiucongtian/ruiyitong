<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingPrefix"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="149dp"
        android:layout_height="112dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="24dp"
        android:src="@color/red"/>

    <RelativeLayout
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="24dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tv_selected_resource_name"
            style="@style/txt_16_dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="高中物理备课" />
        <TextView
            style="@style/txt_14_dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/tv_selected_resource_name"
            android:text="正在显示（1/20）"/>
        <ImageView
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="16dp"
            android:layout_width="18dp"
            android:layout_height="18dp"
            app:ico_color="@color/icon_blue_sky"
            app:ico_icon="fon_800"/>

    </RelativeLayout>

</LinearLayout>