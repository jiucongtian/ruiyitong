<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_students"
        android:layout_width="197dp"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>

    <ImageView
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:src="@color/font_gray"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="104dp">

            <LinearLayout
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="36dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    app:ico_color="@color/status_green"
                    app:ico_icon="fon_855"/>

                <ImageView
                    android:layout_marginLeft="30dp"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    app:ico_color="@color/status_red"
                    app:ico_icon="fon_853"/>

                <ImageView
                    android:layout_marginLeft="30dp"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    app:ico_color="@color/status_green"
                    app:ico_icon="fon_854"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="24dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        style="@style/txt_14_dark"
                        android:gravity="center"
                        android:layout_width="60dp"
                        android:layout_height="30dp"
                        android:background="@drawable/pointbluebg"
                        android:text="+3.0分"/>
                    <TextView
                        style="@style/txt_14_dark"
                        android:layout_marginLeft="10dp"
                        android:gravity="center"
                        android:layout_width="60dp"
                        android:layout_height="30dp"
                        android:background="@drawable/pointbluebg"
                        android:text="+2.5分"/>
                    <TextView
                        style="@style/txt_14_dark"
                        android:layout_marginLeft="10dp"
                        android:gravity="center"
                        android:layout_width="60dp"
                        android:layout_height="30dp"
                        android:background="@drawable/pointbluebg"
                        android:text="+2.0分"/>
                    <TextView
                        style="@style/txt_14_dark"
                        android:layout_marginLeft="10dp"
                        android:gravity="center"
                        android:layout_width="60dp"
                        android:layout_height="30dp"
                        android:background="@drawable/pointbluebg"
                        android:text="+1.5分"/>
                    <TextView
                        style="@style/txt_14_dark"
                        android:layout_marginLeft="10dp"
                        android:gravity="center"
                        android:layout_width="60dp"
                        android:layout_height="30dp"
                        android:background="@drawable/pointbluebg"
                        android:text="+1.0分"/>
                    <TextView
                        style="@style/txt_14_dark"
                        android:layout_marginLeft="10dp"
                        android:gravity="center"
                        android:layout_width="60dp"
                        android:layout_height="30dp"
                        android:background="@drawable/pointbluebg"
                        android:text="+0.5分"/>
                    <TextView
                        style="@style/txt_14_dark"
                        android:layout_marginLeft="10dp"
                        android:gravity="center"
                        android:layout_width="60dp"
                        android:layout_height="30dp"
                        android:background="@drawable/pointbluebg"
                        android:text="+0分"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        style="@style/txt_14_dark"
                        android:gravity="center"
                        android:layout_width="60dp"
                        android:layout_height="30dp"
                        android:background="@drawable/pointpinkbg"
                        android:text="-0分"/>
                    <TextView
                        style="@style/txt_14_dark"
                        android:layout_marginLeft="10dp"
                        android:gravity="center"
                        android:layout_width="60dp"
                        android:layout_height="30dp"
                        android:background="@drawable/pointpinkbg"
                        android:text="-0.5分"/>
                    <TextView
                        style="@style/txt_14_dark"
                        android:layout_marginLeft="10dp"
                        android:gravity="center"
                        android:layout_width="60dp"
                        android:layout_height="30dp"
                        android:background="@drawable/pointpinkbg"
                        android:text="-1.0分"/>
                    <TextView
                        style="@style/txt_14_dark"
                        android:layout_marginLeft="10dp"
                        android:gravity="center"
                        android:layout_width="60dp"
                        android:layout_height="30dp"
                        android:background="@drawable/pointpinkbg"
                        android:text="-1.5分"/>
                    <TextView
                        style="@style/txt_14_dark"
                        android:layout_marginLeft="10dp"
                        android:gravity="center"
                        android:layout_width="60dp"
                        android:layout_height="30dp"
                        android:background="@drawable/pointpinkbg"
                        android:text="-2.0分"/>
                    <TextView
                        style="@style/txt_14_dark"
                        android:layout_marginLeft="10dp"
                        android:gravity="center"
                        android:layout_width="60dp"
                        android:layout_height="30dp"
                        android:background="@drawable/pointpinkbg"
                        android:text="-2.5分"/>
                    <TextView
                        style="@style/txt_14_dark"
                        android:layout_marginLeft="10dp"
                        android:gravity="center"
                        android:layout_width="60dp"
                        android:layout_height="30dp"
                        android:background="@drawable/pointpinkbg"
                        android:text="-3.0分"/>
                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>
        <FrameLayout
            android:background="@mipmap/test"
            android:layout_margin="24dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </FrameLayout>
    </LinearLayout>

</LinearLayout>